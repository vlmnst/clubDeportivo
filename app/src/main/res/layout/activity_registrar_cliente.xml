<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPrincipal">

    <!-- LLAMA AL MENU HAMBURGESA -->
    <include
        android:id="@+id/toolbar_container"
        layout="@layout/toolbar_main">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F7FF"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- TEXTo-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Inscripción Cliente"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- UsUario y Contraseña -->

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/edit_nombre_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ingreso_datos"
                android:gravity="center"
                android:hint="Nombre y Apellido"
                android:padding="10dp"
                android:textColorHint="#FFFFFF"

                />

            <EditText
                android:id="@+id/edit_dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ingreso_datos"
                android:gravity="center"
                android:hint="DNI"
                android:inputType="number"
                android:padding="10dp"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/edit_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ingreso_datos"
                android:gravity="center"
                android:hint="Telefono"
                android:inputType="phone"
                android:padding="10dp"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/edit_correo_electronico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ingreso_datos"
                android:gravity="center"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="#FFFFFF" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/check_apto_medico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layoutDirection="rtl"
                android:text="Posee apto médico"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btnNoSocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Socio"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/btnSocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Socio"
                    android:textSize="18sp" />
            </RadioGroup>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="50dp"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:scaleType="fitEnd"
                    android:src="@drawable/logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toolbar_container" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_primario"
                    android:backgroundTint="@null"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="Registrar"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    tools:ignore="InvalidId" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>