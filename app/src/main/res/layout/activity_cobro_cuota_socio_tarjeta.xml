<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CobroCuotaSocioTarjetaActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CobroCuotaSocioTarjetaActivity">

    <!-- LLAMA AL MENU HAMBURGESA -->
    <include
        android:id="@+id/toolbar_container"
        layout="@layout/toolbar_main">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6F7FF"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Cobro Cuota Socio"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:text="Ingrese monto a pagar:" />

            <EditText
                android:id="@+id/edit_monto_pagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ingreso_datos"
                android:gravity="center"
                android:hint="Monto a pagar"
                android:padding="10dp"
                android:textColorHint="#FFFFFF" />
        </LinearLayout>


        <!--Msj aclaración-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/alerta"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="Sólo se permite ingresar números y coma(,) para los centavos"
                android:textColor="#CF010B"
                android:textSize="10sp"
                android:gravity="center"
                />

        </LinearLayout>


        <!--Opciones Tarjeta-->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Titular de la tarjeta"
                />

            <EditText
                android:id="@+id/TitularTarjeta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/edit_text"
                android:hint="Ej. Pablo Perez" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI del titular" />

            <EditText
                android:id="@+id/DNITitular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/edit_text"
                android:hint="Ej. 12.345.678" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de tarjeta" />

            <EditText
                android:id="@+id/NumeroTarjeta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/edit_text"
                android:hint="XXXX XXXX XXXX XXXX" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Fecha de vencimiento"/>

                <!--Ver como agregar una alerta/dialogo explicando que es CVV-->
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Código de seguridad"/>

        </LinearLayout>

           <!--A mejorar, ver de colocar desplegable en mes y año-->

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="2">

                <EditText
                    android:id="@+id/FechaVencimiento"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@android:drawable/edit_text"
                    android:hint=" Ej. MM/YYYY" />

                <!--Ver como agregar una alerta/dialogo explicando que es CVV-->
                <EditText
                    android:id="@+id/CVVTarjeta"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/edit_text"
                    android:hint=" Ej. 123" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:alpha="0.3"
                android:scaleType="fitEnd"
                android:src="@drawable/logo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegistrarPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_primario"
                android:backgroundTint="@null"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Registrar Pago"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:ignore="InvalidId" />

        </FrameLayout>


    </LinearLayout>
</LinearLayout>
