<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6F7FF"
    tools:context=".MenuPrincipal">

    <!-- LLAMA AL MENU HAMBURGESA -->
    <include
        android:id="@+id/toolbar_container"
        layout="@layout/toolbar_main">

    </include>




    <!-- TEXTo-->
    <TextView
        android:layout_marginTop="150dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="¡Bienvenido/a!\n ¿Qué necesitas hacer el día de hoy?"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="244dp" />



    <!-- BOTONES-->
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"


        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Registrar_Cliente"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="45dp"
            android:layout_height="wrap_content"
            android:text="Registrar un nuevo cliente"
            android:background="@drawable/btn_primario"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_manage_customer"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="45dp"
            android:layout_height="wrap_content"
            android:text="Gestioná tus clientes"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_primario"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />


    </LinearLayout>


    <ImageView
        android:layout_marginTop="50dp"

        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"



        android:alpha="0.3"
        android:scaleType="fitEnd"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/toolbar_container" />


</LinearLayout>