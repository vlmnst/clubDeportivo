<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6F7FF"
    tools:context=".CustomerManagmentActivity">

    <include
        android:id="@+id/toolbar_container"
        layout="@layout/toolbar_main">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="33dp"
        android:paddingBottom="2dp"
        android:paddingTop="22dp">

        <EditText
            android:id="@+id/edit_text_uno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/ingresa_en_dni_a_gestionar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:baselineAligned="false">

        <com.example.clubdeportivo.SelectorView
            android:id="@+id/selector_cliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            />

        <com.example.clubdeportivo.SelectorView
            android:id="@+id/selector_carnet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/selector_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione un rango de vencimientos:"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <Button
            android:id="@+id/button_date_picker"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="35dp"
            android:backgroundTint="#56A5D9"
            android:drawableEnd="@drawable/ic_calendar"
            android:padding="16dp"
            android:text="@string/dd_mm_yyyy_dd_mm_yyyy"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_vencimientos_dia"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:text="@string/vtos_del_dia" />
        </LinearLayout>

        <TextView
            android:id="@+id/clients_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clientes"
            android:textAlignment="center"
            android:layout_marginTop="26dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="33dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_empty_clients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp" > <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center"> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aún no tienes clientes por gestionar."
                android:textColor="#666666" android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_registra_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Registra tu primer cliente!"
                    android:textColor="#2196F3" android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" /> </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_full_clients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_clients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/list_item_client" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/pagination_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="18dp">

            <ImageButton
                android:id="@+id/btn_first_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/first_page_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Primera página"/>

            <ImageButton
                android:id="@+id/btn_prev_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/prev_page"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Página anterior"/>

            <TextView
                android:id="@+id/tv_page_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="16sp"
                tools:text="1 de 10" />

            <ImageButton
                android:id="@+id/btn_next_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_page"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Página siguiente"/>

            <ImageButton
                android:id="@+id/btn_last_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/last_page_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Última página"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>